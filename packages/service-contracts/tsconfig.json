{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"], // Support for both Node.js and web
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true, // Optional, for debugging
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
